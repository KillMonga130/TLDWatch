{
  "manifest_version": 3,
  "name": "Video Learning Accelerator",
  "version": "1.0.0",
  "description": "AI-powered intelligent chapter generation from videos using Chrome's built-in AI",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.coursera.org/*",
    "https://www.udemy.com/*",
    "https://www.linkedin.com/learning/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Learning Accelerator"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.coursera.org/*",
        "https://www.udemy.com/*",
        "https://www.linkedin.com/learning/*"
      ],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html"],
      "matches": []
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
